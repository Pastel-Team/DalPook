<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="?selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="4dp"
        android:padding="7dp"
        android:orientation="horizontal"
        style="@style/selectablebackground">

        <View
            android:id="@+id/view_today_color"
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:background="@drawable/list_item_color"
            android:layout_gravity="center_vertical"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginStart="5dp">

            <TextView
                android:id="@+id/txt_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="오전 00:00"
                android:textColor="#e8c792"
                android:textSize="16sp"
                android:fontFamily="@font/mapo_flower_island"/>

            <TextView
                android:id="@+id/txt_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="내용"
                android:textColor="#999fc9"
                android:textSize="12sp"
                android:fontFamily="@font/mapo_flower_island"/>
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_today_list_delete"
            android:layout_width="35dp"
            android:layout_height="41.5dp"
            android:background="@drawable/ic_delete"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

</LinearLayout>