<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2e3145">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="338.5dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/ic_grad_center"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_cal"
        android:layout_width="match_parent"
        android:layout_height="31.5dp"
        android:layout_marginTop="9dp"
        android:layout_marginStart="9.5dp"/>


    <TableLayout
        android:id="@+id/tl_cal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="9.5dp"
        android:layout_marginEnd="9.5dp"
        android:layout_below="@+id/rcv_cal">

    </TableLayout>

    <Button
        android:id="@+id/btn_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="테스트버튼"/>


</RelativeLayout>