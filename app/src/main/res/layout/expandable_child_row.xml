<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/ly_week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_el_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#c4ccff"
            android:textSize="15sp"
            android:fontFamily="@font/mapo_flower_island"/>

        <TextView
            android:id="@+id/txt_el_weekday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="달요일"
            android:textColor="#c4ccff"
            android:textSize="10sp"
            android:fontFamily="@font/mapo_flower_island"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ly_event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:padding="7dp"
        android:orientation="horizontal"
        style="@style/selectablebackground">

        <View
            android:id="@+id/view_month_list_color"
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:background="@drawable/list_item_color"
            android:layout_gravity="center_vertical"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginStart="5dp">

            <TextView
                android:id="@+id/txt_month_list_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="오전 00:00"
                android:textColor="#e8c792"
                android:textSize="16sp"
                android:fontFamily="@font/mapo_flower_island"/>

            <TextView
                android:id="@+id/txt_month_list_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="내용"
                android:textColor="#999fc9"
                android:textSize="12sp"
                android:fontFamily="@font/mapo_flower_island"/>
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_month_list_delete"
            android:layout_width="35dp"
            android:layout_height="41.5dp"
            android:background="@drawable/ic_delete"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

</LinearLayout>