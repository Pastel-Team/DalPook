<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackground">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2.5dp"
        android:layout_marginEnd="2.5dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:padding="7dp"
        style="@style/selectablebackground">

        <View
            android:id="@+id/view_cal_today_color"
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:background="@drawable/list_item_color"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/txt_time_cal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="오전 00:00"
            android:textColor="#999fc9"
            android:textSize="16sp"
            android:fontFamily="@font/mapo_flower_island"/>
    </LinearLayout>

</LinearLayout>